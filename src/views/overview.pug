extends base

block content 
  .container 
    h1.display-2.text-center= `${capitalize(sauces[0].user.username)}'s Hot Sauce Collection`
    p.text-center.text-muted= sauces.length > 1 ? `There are ${sauces.length} hot sauces in your collection!` : `There is 1 hot sauce in your collection!`
    hr
    .row  
      each sauce in sauces
        .col.mb-3 
          .card.mx-auto(style="width: 18rem")
            img.card-img-top.img-fluid(src='https://cdn.shopify.com/s/files/1/2974/9368/products/HG0206359_1800x1800.jpg?v=1612541423' alt='Hot Sauce' style="max-height: 200px; width: auto; object-fit: contain")
            .card-body.text-center
              a(href="#")
                h5.card-title.text-center= sauce.name
              each star in [1, 2, 3, 4, 5]
                if star <= sauce.rating
                  i.fas.fa-star.fa-lg(style='color: gold;') 
                else 
                  i.far.fa-star.fa-lg(style='color: grey;')
              p= `Submited by: ${sauce.user.username}`
              .d-grid.gap-2.d-md-block
                a.btn.btn-outline-info.btn-sm.me-md-2.me-0(href="#")
                  i.far.fa-edit
                a.btn.btn-outline-info.btn-sm.me-md-2.me-0(href="#") Empty?
                form.d-grid.d-lg-inline(action="#")
                  button.btn.btn-outline-danger.btn-sm 
                    i.far.fa-trash-alt

